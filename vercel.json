{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/favicon.ico",   "dest": "/favicon.ico" },
    { "src": "/static/(.*)",   "dest": "/static/$1" },

    { "src": "/auth/(.*)",     "dest": "api/server.js" },
    { "src": "/chess/(.*)",    "dest": "api/server.js" },
    { "src": "/notes/(.*)",    "dest": "api/server.js" },

    { "src": "/(.*)",          "dest": "/index.html" }
  ]
}
